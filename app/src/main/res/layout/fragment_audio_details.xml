<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layoutDirection="rtl"
    tools:context=".ui.fragments.audio_details.AudioDetailsFragment">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_110sdp"
                android:layout_height="@dimen/_140sdp"
                app:cardCornerRadius="@dimen/_5sdp"
                android:elevation="@dimen/_5sdp"
                android:layout_margin="@dimen/_10sdp"

                >
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/book_cover"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/testbook1"/>

            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_10sdp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/book_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textColorBlack"
                    android:fontFamily="@font/vzb"
                    android:textSize="@dimen/_22sdp"
                    android:text="یک ملیون دلار"
                    />

                <TextView
                    android:id="@+id/book_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primaryColor"
                    android:fontFamily="@font/sans_medium"
                    android:textSize="@dimen/_12sdp"
                    android:text="دوری کلارک، اکبر درویشی"
                    />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_10sdp"
                    />

                <TextView
                    android:id="@+id/book_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textColorBlack"
                    android:fontFamily="@font/bhoma"
                    android:textSize="@dimen/_14sdp"
                    android:text="25000 تومان"
                    />


            </androidx.appcompat.widget.LinearLayoutCompat>


        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/ic_category"
                    app:tint="@color/textColorBlack"/>
                <TextView
                    android:layout_marginTop="@dimen/_7sdp"
                    android:id="@+id/book_real_cat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="موفقیت و خود سازی"
                    android:fontFamily="@font/sans_medium"
                    android:textSize="@dimen/_11sdp"
                    android:textColor="@color/textColorBlack"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <com.google.android.material.divider.MaterialDivider
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_width="@dimen/_1sdp"
                android:layout_height="match_parent"
                android:background="@color/Divider"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/ic_epub"
                    app:tint="@color/textColorBlack"/>
                <TextView
                    android:layout_marginTop="@dimen/_7sdp"
                    android:id="@+id/book_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EPUB"
                    android:fontFamily="@font/sans_medium"
                    android:textSize="@dimen/_11sdp"
                    android:textColor="@color/textColorBlack"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <com.google.android.material.divider.MaterialDivider
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_width="@dimen/_1sdp"
                android:layout_height="match_parent"
                android:background="@color/Divider"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/ic_pen"
                    app:tint="@color/textColorBlack"/>
                <TextView
                    android:layout_marginTop="@dimen/_7sdp"
                    android:id="@+id/book_nashr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ملیکان"
                    android:fontFamily="@font/sans_medium"
                    android:textSize="@dimen/_11sdp"
                    android:textColor="@color/textColorBlack"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <com.google.android.material.divider.MaterialDivider
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_width="@dimen/_1sdp"
                android:layout_height="match_parent"
                android:background="@color/Divider"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/ic_share"
                    app:tint="@color/textColorBlack"/>
                <TextView
                    android:layout_marginTop="@dimen/_7sdp"
                    android:id="@+id/book_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ارسال به دوستان"
                    android:fontFamily="@font/sans_medium"
                    android:textSize="@dimen/_11sdp"
                    android:textColor="@color/textColorBlack"/>
            </androidx.appcompat.widget.LinearLayoutCompat>


        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_15sdp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/book_buy"
                android:layout_width="@dimen/_115sdp"
                android:layout_height="@dimen/_30sdp"
                android:textSize="@dimen/_12sdp"
                android:fontFamily="@font/sans_medium"
                android:textColor="@color/textColorWhite"
                android:text="خرید"
                android:background="@drawable/button_background"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:drawableEnd="@drawable/ic_play"
                android:id="@+id/book_sample"
                android:layout_width="@dimen/_115sdp"
                android:layout_margin="@dimen/_5sdp"
                android:layout_height="@dimen/_30sdp"
                android:gravity="center"
                android:background="@drawable/button_background_white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_12sdp"
                    android:fontFamily="@font/sans_medium"
                    android:textColor="@color/black"
                    android:text="شنیدن نمونه"/>

                <Space
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="0dp"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:src="@drawable/ic_play"
                    />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/book_gift"
                android:layout_margin="@dimen/_3sdp"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:src="@drawable/ic_gift_box"
                app:tint="@color/primaryColor"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/book_addtomark"
                android:layout_margin="@dimen/_3sdp"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:src="@drawable/ic_add_bookmark"
                app:tint="@color/primaryColor"/>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/Divider"/>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_margin="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/about_book"
                android:fontFamily="@font/vzb"
                android:textSize="@dimen/_18sdp"
                android:textColor="@color/textColorBlack"/>

            <io.github.giangpham96.expandable_textview.ExpandableTextView
                android:id="@+id/about_book"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sans"
                android:maxLines="10"
                app:expandAction="بیشتر"
                app:limitedMaxLines="2"
                android:textSize="@dimen/_13sdp"
                app:expandActionColor="@color/primaryColor"
                android:textColor="@color/textColorBlack"/>

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:dividerColor="@color/Divider"
                android:layout_marginTop="@dimen/_10sdp"/>

            <TextView
                android:id="@+id/name_list_books"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/yekanbold"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/textColorBlack"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginTop="@dimen/_10sdp"
                android:id="@+id/list_familar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/item_lists_daynight"/>

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:dividerColor="@color/Divider"
                android:layout_marginTop="@dimen/_10sdp"/>

            <TextView
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/comment"
                android:fontFamily="@font/vzb"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/textColorBlack"/>

            <TextView

                android:id="@+id/cant_comment"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="فقط کسانی که کتاب را خریده ان میتوان نظر بگذارند"
                android:fontFamily="@font/sans"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/textColorBlack"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_marginTop="@dimen/_5sdp"
                android:id="@+id/can_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
                <EditText
                    android:padding="@dimen/_5sdp"
                    android:maxLines="5"
                    android:gravity="top|start"
                    android:fontFamily="@font/sans"
                    android:textSize="@dimen/_11sdp"
                    android:hint="نظرتون رو بنویسید"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_80sdp"
                    android:background="@drawable/edittext_background"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:text="ثبت نظر"
                    android:textColor="@color/textColorWhite"
                    android:fontFamily="@font/sans_medium"
                    android:textSize="@dimen/_12sdp"
                    android:background="@drawable/button_background"/>




            </androidx.appcompat.widget.LinearLayoutCompat>



            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginTop="@dimen/_10sdp"
                android:id="@+id/list_comments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/item_my_comment"/>







        </androidx.appcompat.widget.LinearLayoutCompat>



    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.core.widget.NestedScrollView>